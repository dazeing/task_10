<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag 'search[text]' %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Male</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.male %></td>
        <td><%= user.team.name %></td>
        <td><%= link_to 'Show Team', user.team %></td>
        <td><%= link_to 'Edit User', edit_team_user_path(user.team, user) %></td>
        <td><%= link_to 'Destroy User', [user.team, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>