<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Region:</strong>
  <%= @team.region %>
</p>

<h2>Users:</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Male</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone %></td>
        <td><%= user.male %></td>
        <td><%= link_to 'Show User', team_user_path(@team, user) %></td>
        <td><%= link_to 'Edit User', edit_team_user_path(@team, user) %></td>
        <td><%= link_to 'Destroy User', [@team, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add User', new_team_user_path(@team) %>
<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
