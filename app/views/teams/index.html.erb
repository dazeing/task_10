<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<%= form_tag teams_path, :method => 'get' do %>
  <p>
    <%= text_field_tag 'search[text]' %>
    Name 
    <%= check_box_tag 'search[name]', 'Name', true %>
    Region
    <%= check_box_tag 'search[region]', 'Region', true %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name if team.name %></td>
        <td><%= team.region if team.region %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
